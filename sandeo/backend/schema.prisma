generator client {
    provider = "prisma-client-js"
    output   = "./generated/client"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}
model User {
  id              Int       @id @default(autoincrement())
  firstname       String?
  lastname        String?
  password        String?
  profilePicture  String?
  createdAt       DateTime  @default(now())
  verifiedAccount Boolean   @default(false)
  Formularies     Formulary[]
}

model Formulary {
  id         Int         @id @default(autoincrement())
  name       String?
  createdAt  DateTime    @default(now())
  userId     Int
  status     String?
  isNoted    Boolean     @default(false)
  isPrivate  Boolean     @default(false)
  Questions  Question[]
  User       User        @relation(fields: [userId], references: [id])
}

model Question {
  id            Int      @id @default(autoincrement())
  questionText  String?
  status        String?
  timeSecond    Int?
  haveRespond   Int?
  formularyId   Int
  order         Int?
  hasManyChoice Boolean  @default(false)
  Choices       Choice[]
  Formulary     Formulary @relation(fields: [formularyId], references: [id])
}

model Choice {
  id            Int      @id @default(autoincrement())
  choiceText    String?
  questionId    Int
  goodResponse  Boolean  @default(false)
  chooseCounter Int      @default(0)
  Question      Question @relation(fields: [questionId], references: [id])
}
